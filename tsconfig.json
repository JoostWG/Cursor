{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "./src",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowUnreachableCode": false,
        "noImplicitOverride": true,
        "paths": {
            "@/config": ["./config.json"],
            "@/database": ["./src/database"],
            "@/database/*": ["./src/database/*"],
            "@/lib/*": ["./src/lib/*"],
            "@/modules/*": ["./src/modules/*"]
        }
    }
}
