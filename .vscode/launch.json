{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug TypeScript with ts-node",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": ["${workspaceFolder}/src/index.ts"],
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
